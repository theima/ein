{
  "extends": [
    "tslint:recommended",
    "tslint-etc"
  ],
  "rules": {
    "align": {
      "options": [
        "parameters",
        "statements",
        "members"
      ]
    },
    "array-type": [
      true,
      "array-simple"
    ],
    "curly": true,
    "cyclomatic-complexity": [true, 10],
    "file-name-casing": [
      true,
      "kebab-case"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "no-unused-declaration": {
      "options": [
        {
          "imports": true
        }
      ]
    },
    "no-shadowed-variable": false,
    "ordered-imports": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ]
  }
}
