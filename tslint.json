{
  "extends": [
    "tslint:recommended",
    "tslint-etc"
  ],
  "rules": {
    "align": {
      "options": [
        "parameters",
        "statements",
        "members"
      ]
    },
    "array-type": [
      true,
      "array-simple"
    ],
    "arrow-parens": true,
    "arrow-return-shorthand": true,
    "curly": true,
    "eofline": true,
    "forin": false,
    "file-name-casing": [
      true,
      "kebab-case"
    ],
    "import-spacing": true,
    "indent": {
      "options": [
        "spaces"
      ]
    },
    "interface-name": [
      true,
      "never-prefix"
    ],
    "max-line-length": false,
    "no-consecutive-blank-lines": true,
    "no-boolean-literal-compare": true,
    "no-empty": [
      true,
      "allow-empty-functions"
    ],
    "no-implicit-dependencies": [
      true,
      "dev"
    ],
    "no-unused-declaration": {
      "options": [
        {
          "imports": true
        }
      ]
    },
    "no-shadowed-variable": false,
    "no-sparse-arrays": true,
    "no-submodule-imports": [
      true,
      "rxjs",
      "snabbdom"
    ],
    "only-arrow-functions": false,
    "ordered-imports": true,
    "object-literal-sort-keys": false,
    "prefer-const": false,
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": {
      "options": [
        "always"
      ]
    },
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "unified-signatures": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-module"
    ]
  }
}
